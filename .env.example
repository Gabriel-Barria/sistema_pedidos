# ============================================
# CONFIGURACIÃ“N DE ENTORNO - SISTEMA PEDIDOS
# ============================================

# Entorno
NODE_ENV=development

# ============================================
# POSTGRESQL
# ============================================
POSTGRES_USER=pedidos
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=pedidos
POSTGRES_PORT=5434
DATABASE_URL=postgresql://pedidos:dev_password@localhost:5434/pedidos

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=dev_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:dev_redis_password@localhost:6379

# ============================================
# PGADMIN
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# REDIS COMMANDER
# ============================================
REDIS_COMMANDER_PORT=8081

# ============================================
# API BACKEND (NestJS)
# ============================================
API_PORT=3000
API_PREFIX=api
API_VERSION=v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
FRONTEND_PORT=3001

# ============================================
# PAGOS
# ============================================
# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ============================================
# NOTIFICACIONES
# ============================================
# Firebase Cloud Messaging
FCM_PROJECT_ID=your-firebase-project-id
FCM_CLIENT_EMAIL=your-firebase-client-email
FCM_PRIVATE_KEY=your-firebase-private-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@pedidos.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Sistema de Pedidos <noreply@pedidos.com>

# ============================================
# LOGGING Y MONITORING
# ============================================
LOG_LEVEL=debug
SENTRY_DSN=

# ============================================
# OTROS
# ============================================
TZ=America/Argentina/Buenos_Aires
